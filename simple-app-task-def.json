{
    "family": "ECS-Service-simple-app",
    "executionRoleArn": "arn:aws:iam::567897431931:role/ECS-Service-TaskExecutionRole-1W7MK217FWT3J",
    "requiresCompatibilities": [
        "EC2",
        "FARGATE"
    ],
    "networkMode": "awsvpc",
    "cpu": "256",
    "memory": "512",
    "containerDefinitions": [
        {
            "name": "simple-app",
            "image": "567897431931.dkr.ecr.us-east-1.amazonaws.com/ecs-codepipeline-repository-tkykoiunpih5:d7633503",
            "cpu": 0,
            "memory": 256,
            "environment": [
                {
                    "name": "ENV_TEST",
                    "value": "123456"
                }
            ],
            "portMappings": [
                {
                    "hostPort": 80,
                    "protocol": "tcp",
                    "containerPort": 80
                }
            ],
            "essential": true,
            "entryPoint": [
                "/usr/sbin/apache2",
                "-D",
                "FOREGROUND"
            ],
            "mountPoints": [
                {
                    "containerPath": "/var/www/my-vol",
                    "sourceVolume": "my-vol"
                }
            ]
        },
        {
            "name": "busybox",
            "image": "busybox",
            "cpu": 0,
            "memory": 256,
            "environment": [
                {
                    "name": "ENV_TEST",
                    "value": "123"
                }
            ],
            "entryPoint": [
                "sh",
                "-c"
            ],
            "command": [
                "/bin/sh -c \"while true; do /bin/date > /var/www/my-vol/date; sleep 1; done\""
            ],
            "mountPoints": [],
            "volumesFrom": [
                {
                    "sourceContainer": "simple-app"
                }
            ]
        }
    ],
    "volumes": [
        {
            "name": "my-vol"            
        }
    ]
}
